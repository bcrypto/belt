  {\centering
    {\bf (#2)}\par
    {\large\bf #3}\par
  }
  \def\@currentlabel{#1}
  \def\apprefix{#1.}
  \def\thechapter{#1}
  \setcounter{table}{0}
  \setcounter{section}{0}
  \addcontentsline{toc}{chapter}{Приложение~#1~(#2)~#3}
}
{
  \def\apprefix{}
  \def\thechapter{\@arabic\c@chapter}
}

